# Signal / PortOptimizer API configuration
SIGNAL_BASE_URL=https://example.signalapi.com
SIGNAL_WEEKLY_VOLUMES_URL=/xhr/weeklyVolumesComparison
SIGNAL_CONTAINERS_AT_TERMINAL_URL=/xhr/ContainersAtTerminalData
SIGNAL_OUTGATED_METRICS_URL=/xhr/FetchOutgatedContainerMetricsData
SIGNAL_BERTH_URL=/xhr/FetchQuickviewDashboardBerthData

# JSON payloads for POST requests (optional)
SIGNAL_WEEKLY_VOLUMES_PAYLOAD={"fromDate":"2024-01-01","toDate":"2024-03-31"}
SIGNAL_CONTAINERS_AT_TERMINAL_PAYLOAD={"fromDate":"2024-03-01","toDate":"2024-03-31"}
SIGNAL_OUTGATED_METRICS_PAYLOAD={"fromDate":"2024-03-01","toDate":"2024-03-31"}
SIGNAL_BERTH_PAYLOAD={"fromDate":"2024-03-01","toDate":"2024-03-31"}

# Optional headers + cookies
SIGNAL_HEADERS_JSON={"User-Agent":"Mozilla/5.0"}
SIGNAL_COOKIES_JSON={"sessionid":"REPLACE_ME"}
# Or point to a local cookies.json file
# SIGNAL_COOKIES_PATH=./cookies.json

# Date metadata for KPI tables
FROM_DATE=2024-03-01
TO_DATE=2024-03-31

# KPI thresholds
CONGESTED_BUCKETS=9-12 Days,13+ Days
SLOW_OUTGATE_BUCKETS=5-8 Days,9-12 Days,13+ Days
VOLUME_PRESSURE_HIGH=1.15
VOLUME_PRESSURE_LOW=0.90
TERMINAL_LOADED_HIGH=0.25
TERMINAL_EMPTY_HIGH=0.50
OUTGATE_SLOW_HIGH=0.40
BERTH_HIGH_HOURS=24
BERTH_TOP_N=5

# SQL database
DATABASE_URL=postgresql+psycopg2://user:password@host:5432/signal
DB_SCHEMA=public

LOG_LEVEL=INFO
SIGNAL_TIMEOUT_SECONDS=30
